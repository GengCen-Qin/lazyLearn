<div id="<%= dom_id upload %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">File:</strong>
    <%= link_to upload.file.filename, upload.file, class: "text-gray-700 underline hover:no-underline" if upload.file.attached? %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Info:</strong>
    <%= upload.info %>
  </div>
</div>
