<% content_for :title, "视频字幕播放器" %>

<link rel="stylesheet" href="https://cdn.plyr.io/3.8.3/plyr.css" />
<%= stylesheet_link_tag "video_player_tailwind_fix", "data-turbo-track": "reload" %>

<div class="video-subtitle-app-container h-screen flex flex-col" data-controller="video-subtitle-merged">
  <div class="p-2 sm:p-3 md:p-4 lg:p-5 flex-1 flex flex-col w-full h-full">
    <!-- 文件上传区域 -->
    <div class="bg-white p-5 md:p-6 rounded-xl md:rounded-2xl mb-5 md:mb-6 shadow-md md:shadow-lg">
      <h1 class="text-center text-gray-800 mb-5 md:mb-6 text-xl md:text-2xl font-semibold">视频字幕播放器</h1>
      <div class="flex gap-8 md:gap-10 justify-center flex-wrap">
        <div class="flex flex-col items-center gap-2">
          <label for="videoInput" class="font-semibold text-gray-600 text-sm md:text-base">选择视频文件:</label>
          <input type="file"
                 id="videoInput"
                 data-video-subtitle-merged-target="videoInput"
                 data-action="change->video-subtitle-merged#loadVideo"
                 accept="video/*,.mov,.mp4,.webm,.ogg,.avi,.mkv,.m4v"
                 title="支持格式: MP4, MOV, WebM, OGG, AVI, MKV, M4V"
                 class="p-2 md:p-3 border-2 border-dashed border-gray-300 rounded-lg md:rounded-xl bg-gray-50 cursor-pointer transition-all duration-300 text-sm md:text-base w-full max-w-xs hover:border-blue-500 hover:bg-blue-50" />
          <div class="text-xs text-gray-500 text-center italic">支持格式: MP4, MOV, WebM, OGG, AVI, MKV, M4V</div>
        </div>
        <div class="flex flex-col items-center gap-2">
          <label for="jsonInput" class="font-semibold text-gray-600 text-sm md:text-base">选择字幕文件 (JSON):</label>
          <input type="file"
                 id="jsonInput"
                 data-video-subtitle-merged-target="jsonInput"
                 data-action="change->video-subtitle-merged#loadSubtitles"
                 accept=".json"
                 class="p-2 md:p-3 border-2 border-dashed border-gray-300 rounded-lg md:rounded-xl bg-gray-50 cursor-pointer transition-all duration-300 text-sm md:text-base w-full max-w-xs hover:border-blue-500 hover:bg-blue-50" />
          <div class="text-xs text-gray-500 text-center italic">字幕格式: JSON (.json)</div>
        </div>
      </div>
    </div>

    <!-- 主播放器布局 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-5 md:gap-6 flex-1 min-h-0">
      <!-- 视频播放器 -->
      <div class="bg-black rounded-xl md:rounded-2xl overflow-hidden shadow-lg md:shadow-xl" id="video-player-container">
        <div class="video-container-aspect">
          <video id="videoPlayer"
                 data-video-subtitle-merged-target="video"
                 controls
                 class="object-contain">
            您的浏览器不支持 HTML5 视频。
          </video>
        </div>
      </div>

      <!-- 字幕列表 -->
      <div class="bg-white rounded-xl md:rounded-2xl overflow-hidden shadow-lg md:shadow-xl flex flex-col" id="subtitle-container">
        <div class="p-4 md:p-5 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
          <h3 class="text-gray-800 text-base md:text-lg font-semibold">字幕列表</h3>
          <span id="subtitleCount" data-video-subtitle-merged-target="subtitleCount" class="text-gray-600 text-sm md:text-base bg-gray-200 px-2 py-1 rounded-full">0 条字幕</span>
        </div>
        <div class="flex-1 overflow-y-auto p-3 md:p-4 bg-gray-50" data-video-subtitle-merged-target="subtitleList" id="subtitleList">
          <div class="no-subtitles text-center text-gray-500 p-10 italic">
            请上传字幕文件
          </div>
        </div>
      </div>
    </div>

    <!-- 状态信息 -->
    <div class="flex gap-8 md:gap-10 justify-center mt-4 md:mt-5 p-4 md:p-5 bg-white rounded-lg md:rounded-xl shadow-md md:shadow-lg">
      <div class="flex gap-2 md:gap-3 items-center text-sm md:text-base">
        <span class="text-gray-600 font-medium">当前时间:</span>
        <span id="currentTime" data-video-subtitle-merged-target="currentTime" class="text-gray-800 font-semibold font-mono text-xs md:text-sm">00:00</span>
      </div>
      <div class="flex gap-2 md:gap-3 items-center text-sm md:text-base">
        <span class="text-gray-600 font-medium">当前字幕:</span>
        <span id="currentSubtitleIndex" data-video-subtitle-merged-target="currentSubtitleIndex" class="text-gray-800 font-semibold font-mono text-xs md:text-sm">- / -</span>
      </div>
    </div>
  </div>
</div>

