<div class="max-w-4xl mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">我的单词本</h1>

  <%= turbo_frame_tag "favorites_content" do %>
    <% if @favorites.empty? %>
      <div class="text-center py-12">
        <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
        </svg>
        <p class="text-gray-500 dark:text-gray-400">还没有收藏任何单词</p>
      </div>
    <% else %>
      <div class="space-y-4">
        <% @favorites.each do |word| %>
          <%= turbo_frame_tag "favorite_word_#{word.id}" do %>
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow p-4 hover:shadow-md transition-shadow">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-1">
                    <%= word.word %>
                  </h3>
                  <% if word.phonetic.present? %>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                      [<%= word.phonetic %>]
                    </p>
                  <% end %>
                  <p class="text-sm text-gray-700 dark:text-gray-300">
                    <%= word.translation %>
                  </p>
                </div>
                <%= render partial: 'components/favorite_button', locals: { word: word, favorited: true } %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- 分页 -->
      <div class="mt-8">
        <%= pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% end %>
  <% end %>
</div>