<% content_for :title, "笔记详情" %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="max-w-4xl mx-auto px-4 py-6">
    <div class="mb-6">
      <%= link_to "← 返回", notes_path,
          class: "text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300" %>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <div class="p-6 space-y-6">
        <!-- 问题部分 -->
        <div>
          <h2 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">问题</h2>
          <p class="text-lg text-gray-900 dark:text-gray-100">
            <%= @note.question %>
          </p>
        </div>

        <!-- 学习内容部分 -->
        <div>
          <h2 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">学习内容</h2>
          <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
            <p class="text-gray-900 dark:text-gray-100 ">
              <%= render_text_with_clickable_words(@note.content, { join: '', split: "\n"}) %>
            </p>
          </div>
        </div>

        <!-- 备注部分 -->
        <% if @note.note.present? %>
          <div>
            <h2 class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">备注</h2>
            <div class="bg-blue-50 dark:bg-blue-900/30 rounded-lg p-4">
              <p class="text-gray-900 dark:text-gray-100 ">
                <%= render_text_with_clickable_words(@note.note, { join: '', split: "\n" }) %>
              </p>
            </div>
          </div>
        <% end %>

        <!-- 操作按钮 -->
        <div class="flex flex-wrap gap-3 pt-4 justify-between">
          <%= link_to "编辑", edit_note_path(@note),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

          <%= button_to "删除", note_path(@note),
              method: :delete,
              form: {
                data: {
                  turbo_confirm: "确定要删除这条笔记吗？此操作无法撤销。",
                  turbo_frame: "_top"
                }
              },
              class: "cursor-pointer inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 dark:bg-red-500 dark:hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
        </div>
      </div>
    </div>
  </div>
</div>
