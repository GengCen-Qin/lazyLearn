<% content_for :title, "新建笔记" %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="max-w-4xl mx-auto px-4 py-6">
    <div class="mb-6">
      <%= link_to "← 返回", notes_path,
          class: "text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 dark:hover:text-indigo-300" %>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-xl font-bold text-gray-900 dark:text-gray-100">新建笔记</h1>
      </div>

      <%= form_with(model: @note, local: true, class: "p-6 space-y-6") do |form| %>
        <% if @note.errors.any? %>
          <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-800 rounded-lg p-4">
            <h2 class="text-sm font-medium text-red-800 dark:text-red-200 mb-2">
              <%= pluralize(@note.errors.count, "个错误") %>导致此笔记无法保存：
            </h2>
            <ul class="list-disc list-inside text-sm text-red-700 dark:text-red-300">
              <% @note.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- 学习内容 -->
        <div>
          <%= form.label :content, "学习内容", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.text_area :content,
              rows: 4,
              placeholder: "例如：I can see lots of cards passing by one after other",
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-gray-100" %>
        </div>

        <!-- 问题 -->
        <div>
          <%= form.label :question, "问题", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.text_area :question,
              rows: 3,
              placeholder: "例如：如何表达：我看到很多车一个接一个地过去",
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-gray-100" %>
        </div>

        <!-- 备注 -->
        <div>
          <%= form.label :note, "备注（可选）", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
          <%= form.text_area :note,
              rows: 3,
              placeholder: "一些当时的想法或补充信息",
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-700 dark:text-gray-100" %>
        </div>

        <!-- 提交按钮 -->
        <div class="flex justify-end gap-3">
          <%= link_to "取消", notes_path,
              class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          <%= form.submit "保存",
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
