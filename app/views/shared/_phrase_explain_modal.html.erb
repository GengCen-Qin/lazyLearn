<dialog id="phraseExplainModal" class="modal">
  <div class="modal-box max-w-2xl">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">✕</button>
    </form>

    <h3 class="font-bold text-lg mb-4">短语解释</h3>

    <div class="selected-text-preview bg-base-200 p-3 rounded-lg mb-4">
      <span class="font-medium">选中文本：</span>
      <span id="phrase-explain-selected-text" class="text-primary font-medium">...</span>
    </div>

    <div id="phrase-explain-loading" class="loading-spinner text-center py-8">
      <span class="loading loading-spinner loading-lg text-primary"></span>
      <p class="mt-4 text-base-content/70">正在获取解释...</p>
    </div>

    <div id="phrase-explain-content" class="hidden">
      <div class="prose max-w-none">
        <h4 id="phrase-explain-title" class="text-xl font-bold mb-4">短语解释</h4>
        <p id="phrase-explain-text" class="text-base mb-6 leading-relaxed"></p>

        <div id="phrase-explain-examples" class="mb-6 hidden">
          <h5 class="text-lg font-semibold mb-3">例句</h5>
          <div id="phrase-explain-examples-list" class="space-y-3">
            <!-- 示例将动态插入这里 -->
          </div>
        </div>

        <div id="phrase-explain-usage" class="mb-4 hidden">
          <h5 class="text-lg font-semibold mb-3">使用说明</h5>
          <p class="text-base leading-relaxed"></p>
        </div>
      </div>
    </div>
  </div>
</dialog>

