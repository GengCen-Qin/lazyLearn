<% content_for :title, @book.title || "电子书阅读" %>

<div
  class="p-6 h-screen max-w-7xl mx-auto"
  data-controller="book-reader text-selection-explain"
  data-book-reader-book-id-value="<%= @book.id %>"
  data-book-reader-total-lines-value="<%= @book.total_lines %>"
  data-book-reader-start-line-value="<%= @book.reading_progress&.start_line %>"
  data-book-reader-end-line-value="<%= @book.reading_progress&.end_line %>"
>
  <!-- 返回按钮 -->
  <div class="mb-4">
    <%= link_to "← 返回书籍列表", books_path,
        class: "inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100" %>
  </div>

  <!-- 书籍信息 -->
  <div class="dark:bg-gray-800 rounded-lg shadow p-6 mb-4">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-2">
      <%= @book.title %>
    </h1>

    <div class="flex flex-wrap gap-4 text-sm text-gray-500 dark:text-gray-400">
      <span>创建时间：<%= @book.created_at.strftime("%Y-%m-%d %H:%M") %></span>
      <span>阅读进度：<span id="progress-display" data-book-reader-target="progress">--</span></span>
    </div>
  </div>

  <!-- 阅读内容区域 -->
  <div
    class="dark:bg-gray-800 rounded-lg shadow p-6 h-[calc(100vh-280px)] overflow-y-auto scroll-smooth"
    data-book-reader-target="contentArea"
  >
    <%= turbo_frame_tag "loading-container" do %>
    <% end %>

    <%= turbo_frame_tag "book-content",
        id: "book-content-frame",
        data: { book_reader_target: "turboFrame" } do %>
      <div class="text-gray-900 dark:text-gray-100 leading-10">
        <p class="text-center text-gray-600 dark:text-gray-400 py-8">
          正在加载阅读内容...
        </p>
      </div>
    <% end %>

    <!-- 存储加载状态的隐藏元素 -->
    <div id="loading-status" class="hidden"></div>
  </div>

  <!-- 短语解释模态框 -->
  <%= render "shared/phrase_explain_modal" %>
</div>
