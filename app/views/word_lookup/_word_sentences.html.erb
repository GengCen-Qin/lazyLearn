<%# 例句局部模板 %>
<%# locals: sentences (Array of Sentence Hash or struct with :s_content and :s_cn keys) %>

<% if sentences.present? && sentences.length > 0 %>
  <div>
    <h3 class="font-semibold text-gray-900 dark:text-gray-100 mb-3 flex items-center">
      <svg class="w-4 h-4 mr-2 text-orange-600 dark:text-orange-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
      </svg>
      例句
    </h3>
    <div class="space-y-3 bg-orange-50 dark:bg-orange-900/20 p-4 rounded-lg">
      <% sentences.each do |sentence| %>
        <% s_content = sentence[:s_content] || sentence.dig('s_content') %>
        <% s_cn = sentence[:s_cn] || sentence.dig('s_cn') %>

        <div class="border-l-4 border-orange-400 dark:border-orange-600 pl-4 py-2">
          <p class="text-gray-800 dark:text-gray-200 text-sm leading-relaxed">
            <%= process_definition_with_clickable_words(s_content) %>
          </p>
          <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">
            <%= h(s_cn) %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
