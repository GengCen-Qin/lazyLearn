<div
  class="min-h-screen flex flex-col items-center justify-center bg-white dark:bg-gray-900 p-4"
  data-controller="xiaohongshu-downloader"
>
  <% if Video.count > 0 %>
    <div class="absolute top-6 right-6">
      <%= link_to "视频列表", videos_path, class: "bg-blue-500 hover:bg-blue-700 dark:bg-blue-600 dark:hover:bg-blue-800 text-white font-bold py-2 px-4 rounded-full transition duration-200" %>
    </div>
  <% end %>

  <div class="w-full max-w-2xl flex flex-col items-center justify-center grow gap-8">
    <div
      data-xiaohongshu-downloader-target="resultArea"
      class="
        fixed top-16 left-1/2 transform -translate-x-1/2 w-full max-w-2xl
        px-4 z-50 pointer-events-none
      "
    ></div>

    <h1
      class="
        text-4xl xl:text-6xl
        font-bold bg-clip-text text-transparent p-2
        bg-gradient-to-r from-red-500 via-yellow-500 to-green-500
      "
    >
      Lazy Learn
    </h1>

    <!-- Search Form -->
    <div class="w-full max-w-2xl mb-6">
      <%= form_with url: "/download_xiaohongshu", method: :post, local: true,
                    data: { xiaohongshu_downloader_target: "form",
                            action: "submit->xiaohongshu-downloader#download" } do |form| %>
        <div
          class="
            flex items-center border border-gray-300 dark:border-gray-600 rounded-full px-4 py-2
            shadow-sm hover:shadow-md focus-within:shadow-md bg-white dark:bg-gray-800
            transition-shadow
          "
        >
          <%= form.text_field :url,
                              placeholder: "请输入小红书分享内容...",
                              class: "flex-grow outline-none text-xl bg-transparent text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400",
                              data: { xiaohongshu_downloader_target: "input" } %>

          <%= form.button type: "submit",
                          class: "ml-4 bg-blue-500 hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 text-white rounded-full p-3 focus:outline-none cursor-pointer transition-all duration-200",
                          data: { xiaohongshu_downloader_target: "button" } do %>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
              />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <p class="text-gray-600 dark:text-gray-400 text-lg">
      输入小红书分享内容，系统将自动解析并下载视频
    </p>
  </div>
</div>
