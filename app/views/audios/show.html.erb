<% content_for :title, @audio.title || "音频播放器" %>

<%= stylesheet_link_tag "word_lookup", "data-turbo-track": "reload" %>

<div class="min-h-screen mx-auto px-4 py-8 flex flex-col"
      data-controller="audio-player"
      data-audio-player-subtitles-value="<%= (@audio.formatted_transcription || []).to_json %>"
      data-audio-player-index-value="-1">

  <!-- 标题区域 -->
  <div class="mb-6 flex-shrink-0">
    <h1 class="text-2xl font-bold text-gray-800 dark:text-white mb-2"><%= @audio.title %></h1>
  </div>

  <!-- 音频播放器 -->
  <div class="mb-6 rounded-lg p-4 flex-shrink-0">
    <audio id="audio-player" controls class="w-full" data-audio-player-target="player">
      <source src="<%= rails_blob_url(@audio.audio_file) %>" type="audio/mpeg">
    </audio>
  </div>

  <!-- 字幕区域 - 固定高度，内部滚动 -->
  <div class="flex-1 min-h-0 flex flex-col">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow flex-1 overflow-hidden flex flex-col max-h-[70vh]">
      <div class="border-b border-gray-200 dark:border-gray-700 px-4 py-3 flex-shrink-0">
        <h2 class="text-lg font-semibold text-gray-800 dark:text-white">音频字幕</h2>
      </div>
      <div class="flex-1 overflow-y-auto p-4" data-audio-player-target="subtitleList">
        <% if @audio.has_transcription? %>
          <% @audio.formatted_transcription.each_with_index do |segment, index| %>
            <div class="subtitle-item p-2 border-b border-gray-100 cursor-pointer transition-colors duration-150 group" data-index="<%= index %>" data-start="<%= segment[:start] %>">
              <div class="flex items-start gap-2">
                <div class="flex-1">
                  <div class="text-xs text-gray-500 dark:text-gray-400 mb-1">
                    <% if segment[:time_str] %>
                      <%= segment[:time_str] %>
                    <% else %>
                      <% minutes = (segment[:start]/60).to_i %>
                      <% seconds = (segment[:start]%60).to_i %>
                      <%= "#{minutes.to_s.rjust(2, '0')}:#{seconds.to_s.rjust(2, '0')}" %>
                    <% end %>
                  </div>
                  <div class="text-sm text-gray-800 dark:text-gray-200"><%= render_text_with_clickable_words(segment[:text]) %></div>
                </div>
                <!-- 复读模式按钮 -->
                <button
                  type="button"
                  class="repeat-btn opacity-100 sm:opacity-0 group-hover:opacity-100 transition-all duration-200 p-2 rounded-md border-2 border-transparent hover:border-blue-400 hover:bg-gray-200 dark:hover:bg-gray-600 hover:scale-105 flex-shrink-0 touch-manipulation"
                  data-action="audio-player#toggleRepeatMode"
                  data-index="<%= index %>"
                  title="复读模式"
                >
                  <svg class="repeat-icon w-4 h-4 text-gray-600 dark:text-gray-300 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                </button>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center text-gray-500 dark:text-gray-400 p-6 text-sm">此音频暂无字幕</div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 状态信息 -->
  <div class="mt-4 border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 p-2 sm:p-3">
    <div class="max-w-7xl mx-auto flex flex-row justify-center gap-3 sm:gap-6 text-xs sm:text-sm text-center">
      <div class="flex items-center gap-2">
        <span class="text-gray-600 dark:text-gray-400 font-medium">当前时间:</span>
        <span
          data-audio-player-target="currentTime"
          class="text-gray-800 dark:text-gray-200 font-mono"
        >
          00:00
        </span>
      </div>

      <div class="flex items-center gap-2">
        <span class="text-gray-600 dark:text-gray-400 font-medium">当前字幕:</span>
        <span
          data-audio-player-target="currentSubtitleIndex"
          class="text-gray-800 dark:text-gray-200 font-mono"
        >
          - / -
        </span>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/word_lookup_modal' %>
