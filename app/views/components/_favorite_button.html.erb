<%# locals: word (EcdictWord), favorited (Boolean, optional) %>
<% if Current.user %>
  <% favorited = local_assigns[:favorited] && favorited %>

  <% if favorited %>
    <%= button_to favorite_path(word.id),
        method: :delete,
        data: {
          turbo_method: :delete,
          turbo_confirm: "确定要取消收藏这个单词吗？"
        },
        class: "text-yellow-500 hover:text-red-500 transition-colors duration-200" do %>
      <svg class="w-6 h-6 cursor-pointer" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    <% end %>
  <% else %>
    <%= button_to favorites_path(word_id: word.id),
        method: :post,
        data: {
          turbo_method: :post
        },
        class: "text-gray-400 hover:text-yellow-500 transition-colors duration-200" do %>
      <svg class="w-6 h-6 cursor-pointer" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    <% end %>
  <% end %>
<% else %>
  <!-- 未登录用户不显示收藏按钮 -->
<% end %>