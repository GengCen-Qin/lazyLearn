<!-- 统一导航头部 -->
<header class="bg-white dark:bg-gray-800 shadow-sm z-10" data-controller="mobile-menu">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/品牌区域 -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path, class: "text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-red-500 via-yellow-500 to-green-500 hover:from-red-600 hover:via-yellow-600 hover:to-green-600 transition-all" do %>
          Lazy Learn
        <% end %>
      </div>

      <!-- 导航链接区域(Web展示) -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <%= link_to "首页", root_path,
              class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors #{current_page?(root_path) ? 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white' : ''}" %>

          <%= link_to "视频列表", videos_path,
              class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors #{current_page?(videos_path) ? 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white' : ''}" %>
        </div>
      </div>

      <!-- 认证状态和用户菜单 -->
      <div class="flex items-center">
        <!-- 移动端菜单按钮 -->
        <div class="md:hidden ml-4">
          <button
            type="button"
            class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
            data-action="click->mobile-menu#toggle"
          >
            <!-- 汉堡图标 -->
            <svg class="h-6 w-6" data-mobile-menu-target="hamburgerIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <!-- 关闭图标 -->
            <svg class="hidden h-6 w-6" data-mobile-menu-target="closeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <% if authenticated? %>
          <!-- 已登录状态 -->
          <div class="ml-3 relative hidden md:block">
            <div class="flex items-center gap-2">
              <div class="flex items-center gap-1 bg-green-50 dark:bg-green-900/20 px-3 py-1.5 rounded-full border border-green-200 dark:border-green-800">
                <svg class="h-4 w-4 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-xs text-green-700 dark:text-green-300 font-medium truncate max-w-[80px]">
                  <%= Current.user.email_address.split('@').first %>
                </span>
              </div>

              <%= link_to "退出", session_path,
                  data: { turbo_method: "delete", turbo_confirm: "确定要退出登录吗？" },
                  class: "ml-2 text-sm text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white" %>
            </div>
          </div>
        <% else %>
          <!-- 未登录状态 -->
          <div class="hidden md:flex items-center gap-2">
            <%= link_to "登录", new_session_path,
                class: "text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white px-3 py-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" %>

            <%= link_to "注册", new_registration_path,
                class: "text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white px-3 py-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- 移动端悬浮菜单 -->
  <div class="md:hidden fixed inset-0 z-50 hidden" id="mobile-menu-overlay" data-mobile-menu-target="overlay">
    <!-- 背景遮罩 -->
    <div class="absolute inset-0 bg-opacity-5 transition-opacity" data-action="click->mobile-menu#close"></div>

    <!-- 悬浮菜单容器 -->
    <div class="absolute top-16 right-4 bg-white dark:bg-gray-800 rounded-xl shadow-lg p-3 w-48 transform transition-all duration-300 scale-95 opacity-0" data-mobile-menu-target="menu">
      <!-- 菜单头部 -->
      <div class="flex items-center justify-between mb-3">
        <h3 class="text-base font-semibold text-gray-900 dark:text-white">菜单</h3>
        <button
          type="button"
          class="p-1 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
          data-action="click->mobile-menu#close"
        >
          <svg class="h-4 w-4 text-gray-500 dark:text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- 导航链接 -->
      <div class="space-y-1">
        <%= link_to root_path,
            class: "flex items-center px-2 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors #{current_page?(root_path) ? 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white' : ''}" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          首页
        <% end %>

        <%= link_to videos_path,
            class: "flex items-center px-2 py-2 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors #{current_page?(videos_path) ? 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white' : ''}" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
          视频
        <% end %>
      </div>

      <!-- 用户状态区域 -->
      <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-700">
        <% if authenticated? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="h-6 w-6 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 flex items-center justify-center text-white text-xs font-medium">
                <%= Current.user.email_address.split('@').first.first.upcase %>
              </div>
              <div class="ml-2">
                <div class="text-xs font-medium text-gray-900 dark:text-white truncate max-w-[80px]">
                  <%= Current.user.email_address.split('@').first %>
                </div>
              </div>
            </div>
            <%= link_to "退出", session_path,
                data: { turbo_method: "delete", turbo_confirm: "确定要退出登录吗？" },
                class: "text-xs text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 font-medium" %>
          </div>
        <% else %>
          <div class="space-y-1">
            <%= link_to "登录", new_session_path,
                class: "w-full text-center text-xs font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 px-3 py-1.5 rounded-lg transition-colors" %>
            <%= link_to "注册", new_registration_path,
                class: "w-full text-center bg-blue-500 hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 text-white font-medium py-1.5 px-3 rounded-lg transition duration-200 text-xs" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
