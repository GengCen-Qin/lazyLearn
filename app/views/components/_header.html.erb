<!-- 统一导航头部 -->
<header class="bg-white dark:bg-gray-800 shadow-sm z-10" data-controller="mobile-menu">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/品牌区域 -->
      <%= render 'components/logo' %>

      <!-- 导航链接区域(Web展示) -->
      <%= render 'components/desktop_navigation' %>

      <!-- 认证状态和用户菜单 -->
      <div class="flex items-center">
        <!-- 移动端菜单按钮 -->
        <%= render 'components/mobile_menu_button' %>

        <!-- 桌面端用户认证状态 -->
        <%= render 'components/desktop_user_auth' %>
      </div>
    </div>
  </div>

  <!-- 移动端悬浮菜单 -->
  <%= render 'components/mobile_menu_popup' %>
</header>
