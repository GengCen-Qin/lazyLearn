<div class="min-h-screen bg-base-200 flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <!-- 标题区域 -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-base-content mb-2">创建账户</h1>
      <p class="text-base-content/70">开始您的英语学习之旅</p>
    </div>

    <!-- 注册表单 -->
    <div class="card bg-base-100 border border-base-300 shadow-lg">
      <div class="card-body p-6 md:p-8">
        <%= form_with model: @user, url: registrations_path, class: "space-y-6" do |form| %>
          <!-- 消息提示 -->
          <% if alert = flash[:alert] %>
            <div class="alert alert-error">
              <span><%= alert %></span>
            </div>
          <% end %>

          <% if notice = flash[:notice] %>
            <div class="alert alert-success">
              <span><%= notice %></span>
            </div>
          <% end %>

          <% if @user&.errors&.any? %>
            <div class="alert alert-warning">
              <div>
                <h3 class="font-bold">注册信息有误</h3>
                <div class="text-sm mt-1 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <div>• <%= message %></div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- 邮箱输入 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">邮箱地址</span>
            </label>
            <%= form.email_field :email_address,
                required: true,
                autofocus: true,
                autocomplete: "username",
                placeholder: "请输入您的邮箱地址",
                class: "input input-bordered w-full" %>
          </div>

          <!-- 密码输入 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">密码</span>
            </label>
            <%= form.password_field :password,
                required: true,
                autocomplete: "new-password",
                placeholder: "请输入密码（至少6位）",
                minlength: 6,
                maxlength: 72,
                class: "input input-bordered w-full" %>
            <label class="label">
              <span class="label-text-alt text-base-content/60 text-xs">密码至少6位字符</span>
            </label>
          </div>

          <!-- 确认密码输入 -->
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">确认密码</span>
            </label>
            <%= form.password_field :password_confirmation,
                required: true,
                autocomplete: "new-password",
                placeholder: "请再次输入密码",
                minlength: 6,
                maxlength: 72,
                class: "input input-bordered w-full" %>
          </div>

          <!-- 注册按钮 -->
          <div class="form-control pt-2">
            <%= form.submit "创建账户", class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <!-- 分隔线 -->
        <div class="divider my-6">或</div>

        <!-- 登录链接 -->
        <div class="text-center">
          <p class="text-base-content/70 text-sm mb-3">已有账户？</p>
          <%= link_to "立即登录",
                      new_session_path,
                      class: "btn btn-outline btn-secondary w-full" %>
        </div>
      </div>
    </div>
  </div>
</div>