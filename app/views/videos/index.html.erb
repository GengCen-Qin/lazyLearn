<% content_for :title, "视频列表" %>

<div class="p-6 max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800">视频列表</h1>
  </div>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <% if @videos.any? %>
      <div class="divide-y divide-gray-200">
        <% @videos.each do |video| %>
          <div class="p-4 hover:bg-gray-50 transition-colors duration-150 flex justify-between items-center">
            <div class="flex-1 min-w-0">
              <h2 class="text-lg font-medium text-gray-900 truncate">
                <%= video.title %>
              </h2>
              <div class="mt-1 flex flex-wrap items-center text-sm text-gray-500">
                <span class="mr-4">
                  <%= video.created_at.strftime("%Y-%m-%d %H:%M") %>
                </span>
                <span class="mr-4">
                  <%= video.video_file.attached? ? "视频已上传" : "无视频文件" %>
                </span>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <% case video.transcription_status
                     when 'completed' %>bg-green-100 text-green-800
                     <% when 'processing' %>bg-yellow-100 text-yellow-800
                     <% when 'failed' %>bg-red-100 text-red-800
                     <% else %>bg-gray-100 text-gray-800
                     <% end %>">
                  <%= video.transcription_status_text %>
                </span>
              </div>
            </div>

            <div class="flex items-center space-x-3">
              <% if video.transcription_completed? %>
                <%= link_to "播放", video_path(video), 
                    class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              <% else %>
                <span class="text-sm text-gray-500 italic">
                  等待转录完成...
                </span>
              <% end %>

              <%= button_to "删除", video_path(video), 
                  method: :delete,
                  confirm: "确定要删除这个视频吗？",
                  class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">暂无视频</h3>
        <p class="mt-1 text-sm text-gray-500">
          上传视频文件以开始使用。
        </p>
      </div>
    <% end %>
  </div>
</div>