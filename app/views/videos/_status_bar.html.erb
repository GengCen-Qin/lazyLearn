<!-- 状态信息 -->
<div
  class="border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 p-2 sm:p-3"
  data-controller="video--play-info"
>
  <div class="max-w-7xl mx-auto flex flex-row justify-center gap-3 sm:gap-6 text-xs sm:text-sm text-center">
    <div class="flex items-center gap-2">
      <span class="text-gray-600 dark:text-gray-400 font-medium">当前时间:</span>
      <span
        id="currentTime"
        data-video--play-info-target="currentTime"
        class="text-gray-800 dark:text-gray-200 font-mono"
      >
        00:00
      </span>
    </div>

    <div class="flex items-center gap-2">
      <span class="text-gray-600 dark:text-gray-400 font-medium">当前字幕:</span>
      <span
        id="currentSubtitleIndex"
        data-video--play-info-target="currentSubtitleIndex"
        class="text-gray-800 dark:text-gray-200 font-mono"
      >
        - / -
      </span>
    </div>
  </div>
</div>
