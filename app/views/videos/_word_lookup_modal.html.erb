<dialog id="wordInfo" class="modal" data-controller="word-lookup">
  <div class="modal-box bg-white dark:bg-gray-800 text-gray-900 dark:text-gray-100" style="max-height: 85vh; display: flex; flex-direction: column;">
    <button
      data-word-lookup-target="backBtn"
      class="btn btn-sm text-xl btn-circle absolute left-2 top-2 hidden bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600"
    >‹</button>

    <form method="dialog">
      <button
        data-word-lookup-target="closeBtn"
        class="btn btn-sm text-xl btn-circle absolute right-2 top-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600">✕</button>
    </form>

    <%= turbo_frame_tag "turbo_word_detail" do %>
      <div class="py-4" style="max-height: 60vh; overflow-y: auto;"></div>
    <% end %>
  </div>
</dialog>
